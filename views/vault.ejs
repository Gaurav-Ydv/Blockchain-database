<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>vault</title>
  <link rel="stylesheet" href="./style-login.css">
  <script defer src="https://kit.fontawesome.com/c9fac3fcec.js" crossorigin="anonymous"></script>
</head>
<body>
<!-- partial:index.partial.html -->
<body>
    <section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">
                <h1 class="opacity">CREATE YOUR WALLET</h1>
                <form method="post" action="vault">
                    <input type="email" placeholder="USERNAME" name="username"/>
                    <input type="text" placeholder="FIRST NAME" 
                    name="firstName" />
                    <input type="text" placeholder="ADD BALANCE" 
                    name="balance" />
                    <input type="password" placeholder="CREATE A PIN" 
                    name="pin" />
                    <button class="opacity">CREATE</button>
                </form>   
                <p>! already have a wallet !</p>
                <a href="/mywallet">
                  <button class="opacity">MY WALLET</button>
                </a>      <br><br>      
                <a href="/">
                  <button class="opacity">HOME</button>
                </a>   
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>

        <% if(messages.error) { %>
            <div id="toastbox" class="toast-error">
              
                <% messages.error.forEach(function(error) { %>
                    <i class="fa-solid fa-circle-xmark"></i>
                  <h4><%= 
                    error %></h4>
                  <% }); %>
              
            </div>
            <% } else if(messages.success) { %>
              <div id="toastbox" class="toast-success">
                
                  <% messages.success.forEach(function(success) { %>
                    <i class="fa-solid fa-circle-check"></i>
                    <h4><%= success %></h4>
                    <% }); %>
                
              </div>
              <% } %>

              
    </section>
</body>
<!-- partial -->
  <script  src="./script.js"></script>

</body>
</html>
