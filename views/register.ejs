<!DOCTYPE html>
<html lang="en" >
<head>
  <meta charset="UTF-8">
  <title>signup</title>
  <link rel="stylesheet" href="./style-login.css">
  <script defer src="https://kit.fontawesome.com/c9fac3fcec.js" crossorigin="anonymous"></script>
</head>
<body>
<!-- partial:index.partial.html -->
<body>
    <section class="container">
        <div class="login-container">
            <div class="circle circle-one"></div>
            <div class="form-container">
                <h1 class="opacity">SIGNUP</h1>
                <form method="post" action="/register">
                    <input type="text" placeholder="FIRST NAME" name="firstName"/>
                    <input type="text" placeholder="LAST NAME" name="lastName"/>
                    <input type="email" placeholder="ENTER YOUR EMAIL" name="username"/>
                    <input type="password" placeholder="CREATE A PASSWORD" name="password"/>
                    <input type="password" placeholder="CONFIRM YOUR A PASSWORD" name="cnfrmpassword"/>
                    <button class="opacity" type="submit">SUBMIT</button>
                </form>
                <div>already have an account? 
                    <a href="login " class = " createWallet">LOGIN</a>
                </div>
            </div>
            <div class="circle circle-two"></div>
        </div>
        <div class="theme-btn-container"></div>

        <% if(messages.error) { %>
            <div id="toastbox" class="toast-invalid">
              
                <% messages.error.forEach(function(error) { %>
                    <i class="fa-solid fa-circle-exclamation"></i>
                  <h4><%= 
                    error %></h4>
                  <% }); %>
              
            </div>
            <% } else if(messages.success) { %>
              <div id="toastbox" class="toast-success">
                
                  <% messages.success.forEach(function(success) { %>
                    <i class="fa-solid fa-circle-check"></i>
                    <h4><%= success %></h4>
                    <% }); %>
                
              </div>
              <% } %>

    </section>
</body>
<!-- partial -->
  <script  src="./script.js"></script>

</body>
</html>
